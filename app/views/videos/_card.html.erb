<%# locals: (video:) -%>

<div class="bg-white shadow-lg rounded-lg overflow-hidden">
  <%= link_to video_path(video.slug), target: "_top" do %>
    <%= image_tag video.vimeo_thumbnail, class: 'w-full h-48 object-cover', style: "view-transition-name: #{dom_id(video, :preview)}" %>
  <% end %>
  <div class="p-4">
    <h2 class="font-semibold"><%= video.title %></h2>
    <p class="text-gray-600 text-sm mt-2"><%= time_ago_in_words video.event_date %></p>
  </div>
</div>
