<%# locals: (video:) -%>

<div class="bg-white shadow-lg rounded-lg overflow-hidden">
  <%= link_to video_path(video.slug), target: "_top" do %>
    <%= image_tag video.vimeo_thumbnail,
                  class: 'w-full object-cover',
                  alt: t('videos.card.thumbnail_alt', title: video.title),
                  style: "view-transition-name: #{dom_id(video, :preview)}" %>
    <span class="sr-only"><%= t('videos.card.watch_video', title: video.title) %></span>
  <% end %>
  <div class="p-4">
    <%= link_to video.title,
                video_path(video.slug),
                target: "_top",
                class: "font-sans font-normal text-lg" %>
    <p class="text-gray-600 text-sm mt-2"><%= video.event_date.strftime("%B %Y") %></p>
  </div>
</div>
