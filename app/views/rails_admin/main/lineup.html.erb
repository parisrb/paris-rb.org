<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th><%= Talk.human_attribute_name(:title) %></th>
      <th><%= Talk.human_attribute_name(:speaker_name) %></th>
      <th><%= Talk.human_attribute_name(:speaker_email) %></th>
      <th><%= Talk.human_attribute_name(:speaker_twitter) %></th>
      <th><%= Talk.human_attribute_name(:preferred_month_talk) %></th>
      <th><%= Talk.human_attribute_name(:duration) %></th>
      <th><%= Talk.human_attribute_name(:level) %></th>
      <th><%= Talk.human_attribute_name(:time_position) %></th>
    </tr>
  </thead>
  <tbody>
    <% @talks.each do |talk| %>
      <tr>
        <td><%= talk.title %></td>
        <td><%= talk.speaker_name %></td>
        <td><%= talk.speaker_email %></td>
        <td><%= talk.speaker_twitter %></td>
        <td><%= talk.preferred_month_talk %></td>
        <td><%= talk.duration_text %></td>
        <td><%= talk.level_text %></td>
        <td><%= talk.time_position&.strftime('%H:%M') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
