<section id="sponsors" class="container flex flex-col gap-8">
  <div>
    <h2 class="text-center text-4xl text-primary mb-6"><%= t(".title") %></h2>
    <div class="text-center"><%= t(".subtitle") %></div>
  </div>
  <div class="flex items-center justify-center sm:justify-between flex-wrap gap-12">
    <%= render partial: "sponsors/card", collection: sponsors, as: :sponsor %>
  </div>
  <%= link_to sponsors_path, class: 'link link-primary self-end flex items-center gap-2' do %>
    <%= t('.see_all') %>
    <%= lucide_icon("move-right") %>
  <% end %>
</section>
