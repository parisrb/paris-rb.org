<div class="navbar bg-base-100 lg:px-8 justify-between flex items-center h-20 border-b border-base-200 sticky top-0 z-50">
  <div class="flex justify-start w-fit shrink-0">
    <%= link_to root_path, class: "" do %>
      <%= image_tag 'parisrb-logo-horizontal.png', class: "h-8 md:h-12" %>
    <% end %>
    <!--<a class="btn btn-ghost text-xl">daisyUI</a>-->
  </div>
  <div class="flex justify-end gap-2 lg:gap-4 w-full">
    <ul class="menu menu-horizontal px-1 hidden md:flex">
      <li>
        <%= link_to t("navbar.videos"), videos_path %>
      </li>
      <li>
        <%= link_to t("navbar.coc"), "#" %>
      </li>
      <li>
        <%= link_to t("navbar.sponsors"), "/#sponsors" %>
      </li>
    </ul>
